<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".LoginActivity">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:gravity="center"
		>
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/logo"
		android:src="@drawable/logo"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		/>
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:id="@+id/foto_profil"
		android:src="@drawable/profil"
		android:paddingTop="8dp"
		app:layout_constraintTop_toBottomOf="@id/logo"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		
	/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:text="Nama Pegawai"
		android:id="@+id/nama_pegawai"
		android:paddingTop="8dp"
		app:layout_constraintTop_toBottomOf="@id/foto_profil"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:text="0857xxxxxxxx"
		android:paddingTop="8dp"
		android:id="@+id/nomor_telpon"
		app:layout_constraintTop_toBottomOf="@id/nama_pegawai"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:text="ID Karyawan"
		android:id="@+id/id_karyawan"
	    android:paddingTop="8dp"
		app:layout_constraintTop_toBottomOf="@id/nomor_telpon"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
			/>
	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:paddingTop="8dp"
		android:text="Logout"
		android:id="@+id/tombol_logout"
		app:layout_constraintTop_toBottomOf="@id/id_karyawan"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		/>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:paddingTop="8dp"
		app:layout_constraintTop_toBottomOf="@id/tombol_logout"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		
		android:orientation="horizontal" >
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="E Informasi"
			android:id="@+id/einformasi"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
		/>
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Jadwal"
			android:onClick="go2jadwal"
			android:id="@+id/tombol_jadwal"
			/>
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Kalender"
			android:id="@+id/tombol_kalender"
			/>
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Profile"
			android:id="@+id/tombol_profile"
			/>
		
		</LinearLayout>
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

